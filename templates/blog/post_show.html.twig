                    </div>
                    <!-- logo close -->

                    <!-- small button begin -->
                    <span id="menu-btn"></span>
                    <!-- small button close -->

                    <!-- mainmenu begin -->
                    <nav>
                        <ul id="mainmenu">
                            <li><a href="{{ path('home_index') }}">Home</a></li>
                            <li><a href="{{ path('blog_index') }}">Blog</a></li>
